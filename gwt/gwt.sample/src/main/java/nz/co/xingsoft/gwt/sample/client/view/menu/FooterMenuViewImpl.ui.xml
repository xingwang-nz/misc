<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='res' type='nz.co.xingsoft.gwt.sample.client.view.resource.GlobalResources'/>
	<ui:style>
		.important {
			font-weight: bold;
		}
		.divRow{
	       display:table;
	       width:100%;	
	    }
	    .fieldLayout{
			float: left; 
		}
		.padding3px{
			padding-left: 3px;
			padding-right: 3px;	
		}
		.footerPanelStyle{
			padding-left: 35%;
	        padding-top: 2px;
	        padding-right: 2px;
	        background-color: #221E1F;
		}	
		.linkStyle{
			color:white;
			font-family:arial;
			font-size:11px;
			text-decoration: underline;
			padding: 2;
		}
		
		a.linkStyle:visited {
			color:#FFFFFF;
		}
		
		a.linkStyle:hover{
			color:#f06015;
		    cursor: pointer !important; 
		    cursor: hand;
		    z-index:25; 
		}
		.copyRightStyle{
			color:#666666;
			font-family:arial;
			font-size:11px;
			text-decoration: none;
			padding-right: 2;
		}
		.pipeStyle{
			color:#666666;
			font-family:arial;
			font-size:11px;
			padding-top: 2px;
	        padding-right: 2px;
		}
		a.copyRightStyle:visited {
			color:#FFFFFF;
		}
		a.copyRightStyle:hover{
			color:#f06015;
		    z-index:25; 
		}
		.footer {
			background-color:#1F8BAC;
			}
	</ui:style>
	<g:HTMLPanel width="100%" height="100%" styleName="{style.footerPanelStyle}">
		<div class="{style.divRow}">
			<div class="{style.fieldLayout}">
<!-- 				<g:Anchor text="Â©2011 ECN Group Limited" ui:field="copyRightLbl" styleName="{style.copyRightStyle}"/> -->
			</div>
			<div class="{style.fieldLayout} {style.padding3px}">
				<g:Label text=" " ui:field="pipe1Lbl" styleName="{style.pipeStyle}"/>
			</div>
			<div class="{style.fieldLayout}">
<!-- 				<g:Anchor text="RTL Terms &amp; Conditions" ui:field="termsAndConditionsLink" styleName="{style.linkStyle}"/> -->
			</div>
			<div class="{style.fieldLayout} {style.padding3px}">
				<g:Label text=" " ui:field="pipe2Lbl" styleName="{style.pipeStyle}"/>
			</div>
			<div class="{style.fieldLayout}">
				<g:Anchor text="Powered by Yellow" ui:field="poweredByEcnLink" styleName="{style.linkStyle}"/>
				
			</div>
			<div class="{style.fieldLayout}">
				<g:Label text="   "/>
			</div>
			<div class="{style.fieldLayout}">
				<g:Image resource="{res.yellowIconSmall}"></g:Image>
			</div>
			
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 