<!DOCTYPE ui:UiBinder SYSTEM "xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.input-field {
			width: 200px;
			}
			
			.domain_input_field {
			width: 400px;
			}
			
			.wait_label {
			display: none;
			font-weight: bold;
			}
			.result_label {
			display: none;
			font-weight: bold;
			color: blue;
			}
			
			.image_panel
				{
				width:100%;
				height:100%;
				} 
			
	</ui:style>
	<g:HTMLPanel styleName="{style.image_panel}">
		<table>
			<tr>
				<td><g:Label text="Name:" styleName="{style.important}"/></td>
				<td><g:TextBox styleName="{style.input-field}" ui:field="name"/></td>
			</tr>
			<tr>
				<td><g:Label text="Email:" styleName="{style.important}"/></td>
				<td><g:TextBox styleName="{style.input-field}" ui:field="email"/></td>
			</tr>
			<tr>
				<td><g:Label text="Mobile:" styleName="{style.important}"/></td>
				<td><g:TextBox styleName="{style.input-field}" ui:field="mobile"/></td>
			</tr>
			<tr>
				<td><g:Label text="Home Phone:" styleName="{style.important}"/></td>
				<td><g:TextBox styleName="{style.input-field}" ui:field="homePhone"/></td>
			</tr>
			<tr>
				<td><g:Button text="Group1" ui:field="btnValidate1" /></td>
				<td><g:Label text="Validate group 1 - Validate Name, Email via server side"/></td>
			</tr>
			<tr>
				<td><g:Button text="Group2" ui:field="btnValidate2" /></td>
				<td><g:Label text="Validate group 2 - Validate Email, Mobile, Home Phone via both client and server side"/></td>
			</tr>
		</table>
		
	</g:HTMLPanel>
</ui:UiBinder> 